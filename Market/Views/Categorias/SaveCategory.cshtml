@using Market.Core.Application.ViewModels.Categorias;
@model SaveCategoriaViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Nueva Categoria";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@(editMode ? $"Editando la categoria: {Model.Nombre}" : "Creando nueva categoria")</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Categorias" asp-action="@(editMode ? "Editar":"Crear")">

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre: </label>
                            <input type="text" asp-for="Nombre" class="form-control"/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripcion: </label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                   
                        <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-outline-success">Guardar</button>
                        <a asp-controller="Categorias" asp-action="Index" class="btn btn-outline-danger">Volver atras</a>
                    </div>                       
                    </form>

                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}